@{
    ViewBag.Title = "Store Performance";
}
@section scripts
{
    <!-- DataTables CSS -->
    <link rel="stylesheet" type="text/css" href="~/Scripts/DataTables-1.10.5/media/css/jquery.dataTables.css">
    <!-- jQuery -->
    <script type="text/javascript" charset="utf8" src="~/Scripts/DataTables-1.10.5/media/js/jquery.js"></script>
    <!-- DataTables -->
    <script type="text/javascript" charset="utf8" src="~/Scripts/DataTables-1.10.5/media/js/jquery.dataTables.js"></script>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.11.0/themes/smoothness/jquery-ui.css">
    <script src="//code.jquery.com/ui/1.11.0/jquery-ui.js"></script>

    <script>
        $(document).ready(function () {
            $('#performance-table').DataTable();
        });

    </script>
    

    <script type="text/javascript" charset="utf8" src="~/Scripts/highcharts.js"></script>
    <script>
        $(function () {
            $('#container').highcharts({
                title: {
                    text: 'Monthly sales',
                    x: -20 //center
                },
                xAxis: {
                    categories: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun',
                        'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec']
                },
                yAxis: {
                    title: {
                        text: 'Sales amount'
                    },
                    plotLines: [{
                        value: 0,
                        width: 1,
                        color: '#808080'
                    }]
                },
                tooltip: {
                    valueSuffix: 'Kr'
                },
                legend: {
                    layout: 'vertical',
                    align: 'right',
                    verticalAlign: 'middle',
                    borderWidth: 0
                },
                series: [{
                    name: 'Salg 2012',
                    data: [1578, 1035, 1950, 2530, 3400, 3399, 4585, 4500, 3800, 6500, 15300, 35000]
                }, {
                    name: 'Salg 2013',
                    data: [4050, 4535, 3750, 6530, 6400, 4399, 0, 5500, 6800, 8500, 19300, 45000]
                }, {
                    name: 'Salg 2014',
                    data: [5700, 6535, 6750, 3530, 8400, 2399, 4585, 9500, 2800, 9500, 24300, 85000]
                }, {
                    name: 'Salg 2015',
                    data: [8700, 15535, 12750]
                }]
            });
        });
    </script>
    
    <script type="text/javascript">
        $(function () {
            $('#startdate').datepicker({ dateFormat: "dd-mm-yy" });
            $('#enddate').datepicker({ dateFormat: "dd-mm-yy" });
        });
    </script>
    
}

<h3>Overall Retail Channel Performance</h3>


<hr/>
<table>
    <tr>
        <td style="text-align:left;vertical-align:top;padding:0">
            <h4>Dates</h4>
            <input type="text" id="startdate" name="startdate" value="Start date"><br/><br/>
            <input type="text" id="enddate" name="enddate" value="End date">
            <hr/>
            <h4>Retail Channels</h4>
            <div class="container" style="border: 1px solid #ccc; width: 200px; height: 130px; overflow-y: scroll;">
                <input type="checkbox" /> Fona<br />
                <input type="checkbox" /> Føtex<br />
                <input type="checkbox" /> Bog & Idé<br />
                <input type="checkbox" /> ...<br />
                <input type="checkbox" /> ...<br />
                <input type="checkbox" /> ...<br />
                <input type="checkbox" /> ...<br />
                <input type="checkbox" /> ...<br />
                <input type="checkbox" /> ...<br />

            </div>
            <hr/>
            <h4>Include Expected Sales Numbers</h4>
            <input type="radio" name="sex" value="male">Yes <input type="radio" name="sex" value="female">No
            <hr/>
            <h4>Include Historic Sales Numbers</h4>
            <input type="radio" name="sex" value="male">Yes <input type="radio" name="sex" value="female">No
        </td>
        <td width="100%">
            <div id="container"></div>
        </td>
    </tr>
</table>
<hr/>




