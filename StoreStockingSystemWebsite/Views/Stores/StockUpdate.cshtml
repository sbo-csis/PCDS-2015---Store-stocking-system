@model dynamic


@{
    ViewBag.Title = "Stock Update";
}

<!DOCTYPE html>

<html>
<head>
    <title>ViewBag.Title</title>

</head>

<body>
    <h2>Stock Update</h2>
    @section scripts
{
        <!-- DataTables CSS -->
        <link rel="stylesheet" type="text/css" href="~/Scripts/DataTables-1.10.5/media/css/jquery.dataTables.css">

        <!-- jQuery -->
        <script type="text/javascript" charset="utf8" src="~/Scripts/DataTables-1.10.5/media/js/jquery.js"></script>

        <!-- DataTables -->
        <script type="text/javascript" charset="utf8" src="~/Scripts/DataTables-1.10.5/media/js/jquery.dataTables.js"></script>

        <script>
            $(document).ready(function () {
                $('#selectedChain').DataTable();
                $('#selectedStore').DataTable();
                $('#storeDisplays').DataTable();
                $('#storeProducts').DataTable();
            });


        </script>

    }
<hr/>

    <form>
        <table>
            <tr>
                <td>Select Chain</td>
                <td>Select Store</td>
            </tr>
            <tr>
                <td>
                    <select id="ddl1" onchange="changeDropdown(this,document.getElementById('ddl2'))">
                        <option value=""><!---------></option>
                        <option value="Fona">Fona</option>
                        <option value="Dagrofa">Dagrofa</option>
                        <option value="Bog og Ide">Bog Og Ide</option>
                    </select>
                </td>
                <td>
                    <select id="ddl2">
                    </select>
                </td>
            </tr>
        </table>
    </form>

<script>
    function changeDropdown(ddl1, ddl2) {
        var fona = new Array('København Ø', 'Nykøbing F', 'Næstved');
        var dagrofa = new Array('Super best', 'Kiwi', '...');
        var bogogide = new Array('Vordingborg', 'København C');

        switch (ddl1.value) {
            case 'Fona':
                for (i = 0; i < fona.length; i++) {
                    createOptions(ddl2, fona[i], fona[i]);
                }
                break;
            case 'Dagrofa':
                for (i = 0; i < dagrofa.length; i++) {
                    createOptions(ddl2, dagrofa[i], dagrofa[i]);
                }
                break;
            case 'Bog Og Ide':
                for (i = 0; i < bogogide.length; i++) {
                    createOptions(ddl2, bogogide[i], bogogide[i]);
                }
                break;
            default:
                ddl2.options.length = 0;
                break;
        }
    }
    function createOptions(ddl, text, value) {
        var opt = document.createElement('option');
        opt.setAttribute("value", value);
        opt.innerHTML = text;
        ddl.appendChild(opt);
    }
</script>


<!-- Select which chain to update stock on-->
    <h3>Selected Chain</h3>
    <table id="selectedChain" class="display" style="width: 100%;">
    <select>
        <option>Fona</option>
        <option>Bog og Ide</option>
        <option>Føtex</option>
        <option>...</option>
    </select>

<hr/>

    <!-- Select which store to update stock on-->
    <h3>Selected store</h3>
    <table id="selectedStore" class="display" style="width: 100%;">
        <thead>
            <tr>
                <th>Id</th>
                <th>ABC</th>
                <th>Name</th>
                <th>City</th>
                <th>Zip code</th>
                <th>Adresse</th>
            </tr>
        </thead>

        <tbody>
            <tr>
                <td>1</td>
                <td>A</td>
                <td>Fona Amager</td>
                <td>København S</td>
                <td>2300</td>
                <td>Amager Centret 136</td>
                <td>@Html.ActionLink("Details", "StoreDetails")</td>
            </tr>
        </tbody>
    </table>
    <hr />

    <!-- Current store stock status-->
    <h3>Store stock status</h3>
    <h4>Displays</h4>
    <table id="storeDisplays" class="display" style="width: 50%;">
        <thead>
            <tr>
                <th>Type</th>
                <th>Capacity</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Kasse</td>
                <td>80</td>
            </tr>
        </tbody>
    </table>

    <h4>Products</h4>
    <table id="storeProducts" class="display" style="width: 50%;">
        <thead>
            <tr>
                <th>Type</th>
                <th>CurrentAmount</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Romantisk middag</td>
                <td>30</td>
            </tr>

            <tr>
                <td>Rumrejse</td>
                <td>2</td>
            </tr>

            <tr>
                <td>Ferrari tur</td>
                <td>10</td>
            </tr>
        </tbody>
    </table>

    <!-- Add a display type to the store-->
    <hr />
    <h3>Add display</h3>
    <select>
        <option>Kasse</option>
        <option>Krog</option>
        <option>Papir</option>
    </select>

    <input type="text" name="Capacity" id="displayCapacity" />

    <input type="submit" />


    <!-- Add products to the store-->
    <hr />
    <h3>Add product</h3>

    <select name="Product types" id="productTypes">
        <option>Romantisk middag</option>
        <option>Rumrejse</option>
        <option>Ferrari tur</option>
    </select>
    <select name="Display" id="selectedDisplay">
        <option>Kasse</option>
        <option>Krog</option>
    </select>
    <input type="text" name="amount" id="productAmount" />

    <input type="submit" /></table>


</body>
</html>